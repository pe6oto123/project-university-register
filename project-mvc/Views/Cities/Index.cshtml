@model IEnumerable<project_mvc.Database.Entities.Location.City>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

	@{
	ViewData["Title"] = "Index";
	}
	<h1>Cities</h1>

	<div class="search-group">
		@using (Html.BeginForm("Index", "Cities", FormMethod.Get))
		{
		<div class="input-group-text" style="margin-bottom:1rem; padding-left:0.75rem">
			@*<input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
				aria-describedby="search-addon" style="width:30%; flex:initial;" />*@
			@Html.TextBox("citySearch", (string)ViewBag.CitySearch, new
			{
			@class = "form-control rounded",
			autocomplete = "off",
			type = "search",
			placeholder = "Search",
			style = "width:30%; flex:initial;",
			aria_describedby = "search-addon",
			aria_label = "Search"
			})
			<button type="submit" class="btn btn-primary" style="margin-left:0.5rem">
				<i class="bi bi-search"></i>
			</button>
			<div class="btn-group" style="padding-left:1rem;">
			<div class="form-check"  style="margin-left:2rem">
				@Html.RadioButton("searchParam", "Name", true, new
				{
				@class="form-check-input",
				type="radio",
				id="searchName"
				
				})
				<label class="form-check-label" for="searchName">
					Name
				</label>
			</div>
			<div class="form-check" style="margin-left:2rem">
				@*<input class="form-check-input" type="radio" name="flexRadioDefault" id="searchRegion">*@
				@Html.RadioButton("searchParam", "Region", false, new
				{
				@class="form-check-input",
				type="radio",
				id="searchRegion"
				})
				<label class="form-check-label" for="searchRegion">
					Region
				</label>
			</div>
			<div class="form-check" style="margin-left:2rem">
				@Html.RadioButton("searchParam", "Population", false, new
				{
				@class="form-check-input",
				type="radio",
				id="searchPopulation"
				})
				<label class="form-check-label" for="searchPopulation">
					Population
				</label>
			</div>
		</div>
		</div>

		
		}
	</div>
	<div class="container">
		<div class="row">
			<div class="col-12">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>
								@Html.DisplayNameFor(model => model.Name)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Region)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Population)
							</th>
							<th style="text-align-last: center;table-layout: fixed;width: 0;">
								<a type="button" class="btn btn-primary btn-sm btn-lg" asp-action="Create">
									Add <i class="bi bi-file-earmark-plus-fill"></i>
								</a>
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Region)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Population)
							</td>
							<td style="text-align-last: center;">
								<div class="btn-group">
									<a type="button" class="btn btn-primary" asp-action="Details"
										asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i></a>
									<a type="button" class="btn btn-success" asp-action="Edit"
										asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
									<a type="button" class="btn btn-danger" asp-action="Delete"
										asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
								</div>
							</td>
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>