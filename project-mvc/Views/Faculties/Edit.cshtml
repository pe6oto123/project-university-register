@model project_mvc.Models.DataModels.University.Faculty

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center">Edit Faculty</h1>

<hr />
<div class="row" style="place-content:center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AddressId" />
            <input type="hidden" asp-for="Address!.Id" />
            <div class="form-group">
                <label asp-for="FacultyName" class="control-label" style="font-weight:bold"></label>
                <input asp-for="FacultyName" class="form-control" autocomplete="off" />
                <span asp-validation-for="FacultyName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Address!.AddressName" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Address!.AddressName" class="form-control" autocomplete="off" />
                <span asp-validation-for="Address!.AddressName" class="text-danger"></span>
            </div>
             <div class="form-group">
                  @Html.LabelFor(model => model.Address!.CityId, "City", htmlAttributes: new { @class = "control-label", style="font-weight:bold" })
                  @Html.DropDownListFor(model => model.Address!.CityId, ViewBag.Cities as IEnumerable<SelectListItem>, new { @class = "form-control"})
                  @Html.ValidationMessageFor(model => model.Address!.CityId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group" style="margin-top:0.5rem; float:right">
                <input type="submit" value="Save" class="btn btn-primary" />
                 <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
