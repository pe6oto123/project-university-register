@model IEnumerable<project_mvc.Models.DataModels.University.Subject>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

@{
    ViewData["Title"] = "Index";
}

	<div class="search-group">
		@using (Html.BeginForm("Index", "TeacherUsers", FormMethod.Get))
		{
			<div class="input-group-text" style="margin-bottom:1rem; padding-left:0.75rem">
				<h5 style="padding-right:0.5rem;padding-top: inherit;">Subjects</h5>
				@Html.TextBox("subjectSearch", (string)ViewBag.SubjectSearch, new
				{
				@class = "form-control rounded",
				autocomplete = "off",
				type = "search",
				placeholder = "Search",
				style = "width:20%; flex:initial;",
				aria_describedby = "search-addon",
				aria_label = "Search"
				})
				<button type="submit" class="btn btn-primary" style="margin-left:0.5rem">
					<i class="bi bi-search"></i>
				</button>
			</div>
		}
	</div>
	<div class="container" style="padding:initial">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.SubjectName)
					</th>
					<th style="text-align-last: center;table-layout: fixed;width: 0rem;"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.SubjectName)
						</td>
						<td class="align-middle">
							<div class="btn-group">
								<a type="button" class="btn btn-primary" asp-action="Students" asp-route-subjectId="@item.Id"
								   data-toggle="tooltip" data-placement="bottom" title="Students">
									<i class="bi bi-journals"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>