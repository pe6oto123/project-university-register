@model project_mvc.Models.DataModels.Access.User
@using Microsoft.JSInterop;
@inject IJSRuntime JS

@{
	ViewData["Title"] = "Register";
}

<h1 style="text-align:center">Register</h1>

<hr />
<div id="error-field"
	 style="place-content: center;text-align: center;background-color: #0dcaf029;border-style: outset;border-color: #0d6efd80;padding-left: 1rem;padding-right: 1rem;margin: auto;margin-bottom: 1rem; display: none;">
	<div style="margin: 0.5rem;font-weight: bold;font-size: large;">	Incorrect username and/or password</div>
</div>
<div class="row" style="place-content:center">
	<div class="col-md-4">
		<form asp-action="Register">
			<input type="hidden" asp-for="UserRoleId" value="0" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="UserName" class="control-label" style="font-weight:bold"></label>
				<input asp-for="UserName" class="form-control" autocomplete="off" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label" style="font-weight:bold"></label>
				<input type="password" asp-for="Password" class="form-control" autocomplete="off" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group" style="margin-top:0.5rem; float:right">
				<input type="submit" value="Register" class="btn btn-primary" />
				<a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
			</div>
		</form>
	</div>
</div>

@section Scripts
{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/userModelError.js" type="text/javascript"></script>

@if (!string.IsNullOrEmpty(TempData["func"]?.ToString()))
{
	<script>@TempData["func"]?.ToString()</script>
}